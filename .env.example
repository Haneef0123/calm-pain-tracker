# Supabase Configuration
# Get these from your Supabase project: Settings â†’ API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Test Environment (separate Supabase project for E2E tests)
# Create a separate Supabase project for testing to avoid polluting production data
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key

# Test User Credentials (created via Supabase Admin API)
TEST_USER_EMAIL=test-user@example.com
TEST_USER_PASSWORD=test-password-123
TEST_USER_B_EMAIL=test-user-b@example.com
TEST_USER_B_PASSWORD=test-password-456

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Dev/Test-only auth helpers (never enable in production)
ENABLE_TEST_AUTH=false
TEST_AUTH_SECRET=change-me

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxx
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxx  # Public key ID for client-side Checkout SDK
RAZORPAY_KEY_SECRET=razorpay_test_secret
RAZORPAY_WEBHOOK_SECRET=razorpay_webhook_secret
RAZORPAY_PLAN_PRO_MONTHLY=plan_monthly_xxx
RAZORPAY_PLAN_PRO_ANNUAL=plan_annual_xxx
